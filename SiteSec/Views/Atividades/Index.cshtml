@using SiteSec.Models

@(Html.Kendo().Grid<Atividades>()
    .Name("grid")
    .ToolBar(toolbar => toolbar.Create().Text("Adicionar"))
    .Columns(columns =>
    {
            columns.Bound(p => p.PessoaFisica).Width(200);
            columns.Bound(p => p.Descricao);
            columns.Command(command =>
            {
                command.Edit().Text("Alterar");
                command.Destroy().Text("Apagar");

            });
    })
    .Editable(editable => editable.Mode(GridEditMode.PopUp).DisplayDeleteConfirmation(true))
    .AutoBind(true)
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(150)
        .Events(events => events.Error("Error"))
        .Events(events => events.RequestEnd("RequestEnd"))
        .Events(events => events.Change("Change"))
        .Model(model => model.Id(p => p.Id))
        .Read(read => read.Action("Read", "Atividades"))
        .Create(update => update.Action("Create", "Atividades"))
        .Update(update => update.Action("Update", "Atividades"))
        .Destroy(update => update.Action("Destroy", "Atividades"))
    ).Deferred(true)
)

@(Html.Kendo().Notification()
    .Name("popupNotification").Deferred(true)
)

@Scripts.Render("~/bundles/Web")
