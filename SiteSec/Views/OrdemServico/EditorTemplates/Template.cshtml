@model SiteSec.Models.OrdemServico

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Pessoa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownList()
                              .Name("Pessoa")
                              .DataTextField("Nome")
                              .DataValueField("Id")
                              //.OptionLabel("Selecione...")
                              .Filter("contains")
                              .HtmlAttributes(new { style = "width:100%;" })
                              .DataSource(source =>
                              {
                                  source.Custom()
                                      .ServerFiltering(true)
                                      .Type("aspnetmvc-ajax")
                                      .Transport(transport => { transport.Read("Read", "Pessoas"); })
                                      .Schema(schema => { schema.Data("Data").Total("Total"); });
                              })
                              .Events(e => { e.Change("onChange"); })
                )
                @Html.ValidationMessage("Pessoa", "", new { @class = "text-danger" })
            </div>
        </div>

