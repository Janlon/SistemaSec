<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href='https://fonts.googleapis.com/css?family=Armata' rel='stylesheet'>
    <style>
        body {
            font-family: 'Armata';font-size: 14px;
            margin:0;
            padding:0;
            height: 100vh;
        }

        #grid {
            height: 95vh;
        }

        *:fullscreen
        *:-ms-fullscreen,
        *:-webkit-full-screen,
        *:-moz-full-screen {
            overflow: auto !important;
        }

     </style>
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.common.min.css">
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.rtl.min.css">
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.materialblack.min.css">

</head>
<body>

        @(Html.Kendo().Menu()
              .Name("Menu")
              .Scrollable(true)
              .Items(items =>
              {
                  items.Add()
                      .Text("Canais")
                      .Items(children =>
                       {
                           children.Add().Text("Categoria 1")
                                   .Items(innerChildren =>
                                   {
                                       innerChildren.Add().Text("Nome do canal 1").ImageUrl(Url.Content("~/Content/images/star.png"));                                
                                       innerChildren.Add().Text("Nome do canal 2");
                                       innerChildren.Add().Text("Nome do canal 3");

                                   });
                           children.Add().Separator(true);
                           children.Add().Text("Categoria 2")
                                   .Items(innerChildren =>
                                   {
                                       innerChildren.Add().Text("Nome do canal 1");
                                       innerChildren.Add().Text("Nome do canal 2");
                                       innerChildren.Add().Text("Nome do canal 3");
                                   });

                      });

                  items.Add().Text("Filmes")
                        .Items(children =>
                       {
                           children.Add().Text("Categoria 1")
                                   .Items(innerChildren =>
                                   {
                                       innerChildren.Add().Text("Nome do filme 1");
                                       innerChildren.Add().Text("Nome do filme 2");
                                       innerChildren.Add().Text("Nome do filme 3");

                                   });
                           children.Add().Separator(true);
                           children.Add().Text("Categoria 2")
                                   .Items(innerChildren =>
                                   {
                                       innerChildren.Add().Text("Nome do filme 1");
                                       innerChildren.Add().Text("Nome do filme 2");
                                       innerChildren.Add().Text("Nome do filme 3");
                                   });

                      });
                }).Deferred(true)
                        )


    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="https://kendo.cdn.telerik.com/2017.1.223/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.1.223/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.1.223/js/kendo.aspnetmvc.min.js"></script>

    <script>

        function requestFullScreen() {

          var el = document.body;

          // Supports most browsers and their versions.
          var requestMethod = el.requestFullScreen || el.webkitRequestFullScreen 
          || el.mozRequestFullScreen || el.msRequestFullScreen;

          if (requestMethod) {

            // Native full screen.
            requestMethod.call(el);

          } else if (typeof window.ActiveXObject !== "undefined") {

            // Older IE.
            var wscript = new ActiveXObject("WScript.Shell");

            if (wscript !== null) {
              wscript.SendKeys("{F11}");
            }
          }
        }
	

    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Html.Kendo().DeferredScripts(true)

</body>

</html>
